<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">
	<androidx.gridlayout.widget.GridLayout
		android:id="@+id/button_frame"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:rowCount="3"
		app:columnCount="4">

		<ImageButton
			android:id="@+id/mode"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:onClick="changeModeCallback"
			android:src="@drawable/sudoku_icon_number"
			android:scaleType="centerInside"
			android:background="@android:color/transparent"
			app:layout_row="2"
			app:layout_column="2"
			app:layout_columnSpan="2"
			app:layout_rowWeight="1"
			app:layout_gravity="fill"/>

		<Button
			android:id="@+id/button1"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:text="1"
			android:tag="@{1}"
			android:onClick="numberClickCallback"
			style="@style/sudokuButton"
			app:layout_row="0"
			app:layout_column="0"
			app:layout_rowWeight="1"
			app:layout_columnWeight="1"
			app:layout_gravity="fill"/>

		<Button
			android:id="@+id/button2"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:text="2"
			android:tag="@{2}"
			android:onClick="numberClickCallback"
			style="@style/sudokuButton"
			app:layout_row="0"
			app:layout_column="1"
			app:layout_rowWeight="1"
			app:layout_columnWeight="1"
			app:layout_gravity="fill"/>

		<Button
			android:id="@+id/button3"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:text="3"
			android:tag="@{3}"
			android:onClick="numberClickCallback"
			style="@style/sudokuButton"
			app:layout_row="0"
			app:layout_column="2"
			app:layout_rowWeight="1"
			app:layout_columnWeight="1"
			app:layout_gravity="fill"/>

		<Button
			android:id="@+id/button4"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:text="4"
			android:tag="@{4}"
			android:onClick="numberClickCallback"
			style="@style/sudokuButton"
			app:layout_row="0"
			app:layout_column="3"
			app:layout_rowWeight="1"
			app:layout_columnWeight="1"
			app:layout_gravity="fill"/>

		<Button
			android:id="@+id/button5"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:text="5"
			android:tag="@{5}"
			android:onClick="numberClickCallback"
			style="@style/sudokuButton"
			app:layout_row="1"
			app:layout_column="0"
			app:layout_rowWeight="1"
			app:layout_columnWeight="1"
			app:layout_gravity="fill"/>
		
		<Button
			android:id="@+id/button6"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:text="6"
			android:tag="@{6}"
			android:onClick="numberClickCallback"
			style="@style/sudokuButton"
			app:layout_row="1"
			app:layout_column="1"
			app:layout_rowWeight="1"
			app:layout_columnWeight="1"
			app:layout_gravity="fill"/>

		<Button
			android:id="@+id/button7"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:text="7"
			android:tag="@{7}"
			android:onClick="numberClickCallback"
			style="@style/sudokuButton"
			app:layout_row="1"
			app:layout_column="2"
			app:layout_rowWeight="1"
			app:layout_columnWeight="1"
			app:layout_gravity="fill"/>

		<Button
			android:id="@+id/button8"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:text="8"
			android:tag="@{8}"
			android:onClick="numberClickCallback"
			style="@style/sudokuButton"
			app:layout_row="1"
			app:layout_column="3"
			app:layout_rowWeight="1"
			app:layout_columnWeight="1"
			app:layout_gravity="fill"/>

		<Button
			android:id="@+id/button9"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:text="9"
			android:tag="@{9}"
			android:onClick="numberClickCallback"
			style="@style/sudokuButton"
			app:layout_row="2"
			app:layout_column="0"
			app:layout_rowWeight="1"
			app:layout_columnWeight="1"
			app:layout_gravity="fill"/>

		<Button
			android:id="@+id/clear"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:text="C"
			android:tag="@{0}"
			android:onClick="numberClickCallback"
			style="@style/sudokuButton"
			app:layout_row="2"
			app:layout_column="1"
			app:layout_rowWeight="1"
			app:layout_columnWeight="1"
			app:layout_gravity="fill"/>

	</androidx.gridlayout.widget.GridLayout>

</layout>
