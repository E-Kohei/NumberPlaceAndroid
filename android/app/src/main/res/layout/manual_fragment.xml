<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/manual_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_margin="10dp"
                android:layout_marginStart="5dp"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/manual_introduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"/>

            <ImageView
                android:id="@+id/manual_image_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/manual_image_height"
                android:scaleType="centerInside"/>

            <TextView
                android:id="@+id/manual_document_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"/>

            <ImageView
                android:id="@+id/manual_image_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/manual_image_height"
                android:scaleType="centerInside"/>

            <TextView
                android:id="@+id/manual_document_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>