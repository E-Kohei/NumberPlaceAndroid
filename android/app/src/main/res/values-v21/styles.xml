<resources>

    <!-- style for LevelListFragment transition animation -->
    <style name="CircleTransitionTheme" parent="AppTheme">

		<!-- enable window content transitions -->
		<item name="android:windowContentTransitions">true</item>

		<!-- specity enter transition -->
		<item name="android:fragmentEnterTransition">
			@android:transition/fade
		</item>
		<item name="android:fragmentSharedElementEnterTransition">
			@transition/change_transform
		</item>

	</style>


	<!-- style for SavedActivity transition animation -->
	<style name="SudokuTheme.Green" parent="SudokuTheme">
		<!-- theme for SavedActivity -->
		<item name="colorPrimaryDark">@color/denseforest</item>
		<item name="colorAccent">@color/vividgreen</item>

		<!-- enable window content transitions -->
		<item name="android:windowContentTransitions">true</item>

		<!-- specity enter and exit transitions -->
		<item name="android:windowEnterTransition">
			@android:transition/fade
		</item>
		<item name="android:windowExitTransition">
			@android:transition/fade
		</item>

		<!-- specify shared element enter and exit transitions -->
		<item name="android:windowSharedElementEnterTransition">
			@transition/change_transform
		</item>
		<item name="android:windowSharedElementExitTransition">
			@transition/change_transform
		</item>
	</style>

</resources>
