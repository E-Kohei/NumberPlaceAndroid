<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.norana.numberplace">

    <application
        android:name=".NumberPlaceApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.norana.numberplace.ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.norana.numberplace.ui.activity.PlayActivity"
            android:theme="@style/SudokuTheme.Red"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name="com.norana.numberplace.ui.activity.MakeActivity"
            android:theme="@style/SudokuTheme.Blue"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name="com.norana.numberplace.ui.activity.SavedActivity"
            android:theme="@style/SudokuTheme.Green"
            android:launchMode="singleTop">
        </activity>

        <activity
            android:name="com.norana.numberplace.ui.activity.ManualActivity"
            android:theme="@style/ManualTheme"
            android:launchMode="singleTop">
        </activity>

    </application>

</manifest>